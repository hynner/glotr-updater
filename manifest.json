{
  "manifest_version": 2,

  "name": "GLOTR-updater",
  "description": "This extension updates GLOTR database.",
  "version": "0.1",

  "permissions": [
    "http://*/*"
  ],
  "content_scripts":[
	{
		"matches": [ "http://*/game/index.php*" ],
		"include_globs": [ "http://uni680.ogame.*/game/index.php*" ],
		"run_at": "document_start",
		"js": [
			"js/inject.js"
		],
		"css": ["css/main.css"]
	}
  ],
  "web_accessible_resources": [
	  "images/status-circles.png",
	  "js/*",
	  "templates/*"

  ]
}